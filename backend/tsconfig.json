{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es3",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/types/*"
      ]
    },
    "lib": ["es2018", "dom", "es6"],
    "types": ["node"],
    "typeRoots": [ "../node_modules/@types" ]
  },
  "include": [
    "./src/**/*"
  ]
}